#!/usr/bin/env bash
set -e

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

function encrypt() {
  to_encrypt=$1
  if [ -z $to_encrypt ]
  then
    echo "usage: encrypt <file>"
  fi

  gpg --encrypt -r yubikey1 -o $to_encrypt.gpg $to_encrypt
}

cd $DIR/../secrets/

for directory in docs ssl per_container/*
do
  if [ ! -e $directory ]
  then 
    echo "direction \"${directory}\" does not exist. Skipping."
  else
    file=${directory}.tar
    echo "tarring and encrypting $file"
    tar -cf $file $directory
    encrypt $file
  fi
done

