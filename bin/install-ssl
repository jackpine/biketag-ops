#!/usr/bin/env bash

function usage {
  cat <<EOS
Usage: ./install-ssl
EOS
}

cat ~/biketag-ops/secrets/ssl/crt/* > ~/biketag-ops/secrets/ssl/api_biketag_jackpine_me_bundle.crt
docker exec -i biketag-api bash -c "cat - > /etc/ssl/certs/api_biketag_jackpine_me_bundle.crt" < ~/biketag-ops/secrets/ssl/api_biketag_jackpine_me_bundle.crt
docker exec -i biketag-api bash -c "chmod 600 /etc/ssl/certs/api_biketag_jackpine_me_bundle.crt"

docker exec -i biketag-api bash -c "cat - > /etc/ssl/private/api_biketag_jackpine_me.key" < ~/biketag-ops/secrets/ssl/api_biketag_jackpine_me.key
docker exec -i biketag-api bash -c "chmod 600 /etc/ssl/private/api_biketag_jackpine_me.key"

